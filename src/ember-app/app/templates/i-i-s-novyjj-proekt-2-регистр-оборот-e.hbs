<h3 class="ui header">{{t "forms.i-i-s-novyjj-proekt-2-регистр-оборот-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.iD
      class=(if (v-get validationModel "iD" "isInvalid") "error")
      label=(t "forms.i-i-s-novyjj-proekt-2-регистр-оборот-e.iD-caption")
      data-test-i-i-s-novyjj-proekt-2-регистр-оборот-e-iD=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "iD" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-novyjj-proekt-2-регистр-оборот-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-novyjj-proekt-2-регистр-оборот-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field" data-test-i-i-s-novyjj-proekt-2-регистр-оборот-e-расходПриход="true">
    <label>{{t "forms.i-i-s-novyjj-proekt-2-регистр-оборот-e.расходПриход-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-novyjj-proekt-2-расход-приход")
      value=model.расходПриход
      class=(if (v-get validationModel "расходПриход" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "расходПриход" "message")}}
  </div>
  <div class="field" data-test-i-i-s-novyjj-proekt-2-регистр-оборот-e-тип="true">
    <label>{{t "forms.i-i-s-novyjj-proekt-2-регистр-оборот-e.тип-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-novyjj-proekt-2-тип")
      value=model.тип
      class=(if (v-get validationModel "тип" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тип" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.сумма
      class=(if (v-get validationModel "сумма" "isInvalid") "error")
      label=(t "forms.i-i-s-novyjj-proekt-2-регистр-оборот-e.сумма-caption")
      data-test-i-i-s-novyjj-proekt-2-регистр-оборот-e-сумма=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сумма" "message")}}
  </div>
</form>
